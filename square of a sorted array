class Solution {
    public int[] sortedSquares(int[] nums) {
        int n=nums.length;
        int result[]=new int[n];
        int right=n-1;
        int left=0;
        int end=n-1;
        int leftsq,rightsq;
        while(left<=right){
             leftsq=nums[left]*nums[left];
             rightsq=nums[right]*nums[right];
            if(leftsq>rightsq){
                result[end]=leftsq;
                left++;
            }
            else{
                result[end]=rightsq;
                right--;
            }
            end--;
        }
        return result;
    }
}
